@model AlkemyUniversity.Models.Course

@{
	ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
	<h4>Course</h4>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.Title)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Title)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Quota)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Quota)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.Description)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Description)
		</dd>
		<br />
		@foreach (var item in Model.Professors)
		{
			<dt>
				Professor
			</dt>
			<dd>
				@Html.DisplayFor(modelItem => item.First_Name)
				@Html.DisplayFor(modelItem => item.Last_Name)

			</dd>
			<br />
		}
		@foreach (var item in Model.Schedules)
		{
			<dt>
				@Html.DisplayNameFor(modelItem => item.Day)
			</dt>
			<dd>
				@Html.DisplayFor(modelItem => item.Day)
			</dd>
			<dt>
				@Html.DisplayNameFor(modelItem => item.Start)
			</dt>
			<dd>
				@Html.DisplayFor(modelItem => item.Start)
			</dd>
			<dt>
				@Html.DisplayNameFor(modelItem => item.End)
			</dt>
			<dd>
				@Html.DisplayFor(modelItem => item.End)
			</dd>
			<br />
		}


	</dl>
</div>
<p>
	@Html.ActionLink("Edit", "Edit", new { id = Model.CourseID }) |
	@Html.ActionLink("Back to List", "IndexAdmin")
</p>
